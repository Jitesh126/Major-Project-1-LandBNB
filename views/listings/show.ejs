<% layout("/layouts/boilerplate") %>

<script>
    const mapToken = "<%= process.env.MAP_TOKEN %>";
    const listing = (<%- JSON.stringify(listing) %>);
</script>

<div class="row">
    <div class="col-10 offset-1 ">
        <h3><%= listing.title %></h3>
        
        <div class="show-images">
            <% for(let i=0; i<=1; i++) { %>
                <div class="show-images-one col-6">
                    <img src="<%= listing.image[i] %>" class="show-image-1" alt="listing_image">
                </div>
                <% if(listing.image.length == 2) { %>
                    <div class="show-images-two col-3">
                        <img src="<%= listing.image[i+1] %>" class="show-image-2" alt="listing_image">
                        <img src="<%= listing.image[i+1] %>" class="show-image-3" alt="listing_image">
                    </div>
                <% } else { %>
                    <div class="show-images-two col-3">
                        <img src="<%= listing.image[i] %>" class="show-image-2" alt="listing_image">
                        <img src="<%= listing.image[i] %>" class="show-image-3" alt="listing_image">
                    </div>
                <% } %>
                    <div class="show-images-three col-3">
                        <% if(listing.image.length == 2) { %>
                            <img src="<%= listing.image[i+1] %>" class="show-image-4" alt="listing_image">
                        <% } else { %>
                           <img src="<%= listing.image[i] %>" class="show-image-4" alt="listing_image">
                        <% } %> 
                        <img src="<%= listing.image[i] %>" class="show-image-5" alt="listing_image">
                    </div>
                <% break; %>
            <% } %>
        </div>
        

        <div>
            <p class="show-info mt-1">
                Hosted by <b><i><u><%= listing.owner.username %></u></i></b> <br>
                <%= listing.description %> <br>
                &#8377; <%= listing.price.toLocaleString("en-IN") %> / night <br>
                <%= listing.country %>, <%= listing.location %>
            </p>
        </div>

       <% if(currUser && listing.owner._id.equals(currUser._id)) { %>
        <div class="show-edit-del mb-2">
            <button type="button" class="show-edit"><a href="/listings/<%= listing._id %>/edit">Edit</a></button>
            <form method="post" action="/listings/<%= listing._id %>?_method=DELETE">
                <button class="ms-3 show-del">Delete</button>
            </form>
        </div>
        <% } %>
        
    </div>
</div>


<div class="review row">
    <% if(currUser) { %>
    <div class="give-review col-10 offset-1">
        <hr>
        <div>
            <h3>Leave a review</h3>
            <form method="post" action="/listings/<%=listing._id%>/reviews" novalidate class="needs-validation">
                <div>
                   <b>Rate from scale 1 to 5</b>
                    <fieldset class="starability-slot mt-1">   
                        <input type="radio" id="no-rate" class="input-no-rate" name="review[rating]" value="1" checked aria-label="No rating." />
                        <input type="radio" id="first-rate1" name="review[rating]" value="1" />
                        <label for="first-rate1" title="Terrible">1 star</label>
                        <input type="radio" id="first-rate2" name="review[rating]" value="2" />
                        <label for="first-rate2" title="Not good">2 stars</label>
                        <input type="radio" id="first-rate3" name="review[rating]" value="3" />
                        <label for="first-rate3" title="Average">3 stars</label>
                        <input type="radio" id="first-rate4" name="review[rating]" value="4" />
                        <label for="first-rate4" title="Very good">4 stars</label>
                        <input type="radio" id="first-rate5" name="review[rating]" value="5" />
                        <label for="first-rate5" title="Amazing">5 stars</label>
                    </fieldset>
                </div>
                <div>
                    <textarea name="review[comment]" id="comment" rows="5" cols="25" placeholder="please comment on <%= listing.title %>" class="form-control mb-2"></textarea>
                </div>
                <button class="btn btn-outline-dark mb-1 mt-1">Submit</button>
            </form>
        </div>
        
    </div> 
    <% } %>

    <% if(listing.reviews.length > 0) { %>
    <div class="show-review col-10 offset-1">
        <hr>
        <div class="row">
            <h4 class="mb-2">All Reviews</h4>
            <% for(let review of listing.reviews) { %>
                <div class="card review-card col-6 mb-3">
                    <div class="card-body">
                        <div class="card-title mt-2"><b>@<%= review.author.username %></b></div>
                        <div class="card-text mb-1"><p class="starability-result aaa" data-rating="<%= review.rating %>"></p></div>
                        <div class="card-text"><%= review.comment %></div>
                        <div class="card-text mt-1">Created At: <%= review.createdAt.toString().split(" ").slice(1,4).join("/") %></div>
                        <% if(currUser && currUser._id.equals(review.author._id)) { %>
                        <form method="post" action="/listings/<%= listing._id %>/reviews/<%= review._id %>?_method=DELETE">
                            <button class="btn btn-sm btn-dark del-review-btn mt-2 mb-3">Delete</button>
                        </form>
                        <% } %>
                    </div>
                </div>
            <% } %>
        </div>
    </div> 
    <% } %> 
</div>

<div class="row map-row">
    <div class="col-10 offset-1">
        <h3>Where you'll be</h3>
        <div id="map"></div>
    </div>
</div>
<br><br>

<script src="/js/map.js"></script>